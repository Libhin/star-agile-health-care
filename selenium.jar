import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.junit.After;
import org.junit.Before;
import org.junit.Test;
import static org.junit.Assert.*;

public class PolicyApiTest {

    private WebDriver driver;

    @Before
    public void setUp() {
        // Set path for ChromeDriver (adjust to your local setup if needed)
        System.setProperty("webdriver.chrome.driver", "/path/to/chromedriver");
        driver = new ChromeDriver();
        driver.get("http://your-ec2-instance-url/policy/viewPolicy/1");
    }

    @Test
    public void testViewPolicy() {
        WebElement policyName = driver.findElement(By.id("policy-name"));
        assertNotNull("Policy name should be displayed", policyName);
    }

    @After
    public void tearDown() {
        driver.quit();
    }
}
